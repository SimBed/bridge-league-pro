<h5 class='mb-4'>Leagues 
  <%= link_to new_league_path do %>
    <i class="bi bi-database-fill-add"></i>
  <% end %>
</h5>

  <table>
    <thead>
      <tr>
        <th>Season</th>
        <th>Name</th>
        <th class="">Matches</th>
        <th class="pe-3">Players</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @leagues.each do |league| %>
        <tr>
          <td><%= league.season %></td>
          <td><%= link_to league.name, league %></td>
          <td class="text-center"><%= league.matches.count %></td>
          <td class="ps-2 pe-3 pe-md-5 text-center"><%= league.players.count %></td>
          <td class="px-2"><%= link_to edit_league_path(league) do %>
            <i class="bi bi-pencil-fill"></i>
            <% end %>
          </td>
          <!--td class="px-2"><%#= link_to image_tag("edit.png", class: "edit-icon"), edit_league_path(league) %></td-->
          <td class="px-2"><%= button_to league, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="bi bi-trash-fill"></i>
            <% end %>
          </td>
          <!--td class="px-1"><%#= button_to image_tag("delete.png", class: "edit-icon"), league, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

