<table id = "matches_table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Score</th>
      <th>Winner</th>
      <th>Loser</th>
      <th>League</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date.strftime('%d/%m/%y') %></td>
        <td><%= match.score %></td>
        <td><%= link_to match.winner.name, match.winner %></td>
        <td><%= link_to match.loser.name, match.loser %></td>
        <td><%= link_to match.league.name, match.league %></td>
      </tr>
    <% end %>
  </tbody>
</table>
