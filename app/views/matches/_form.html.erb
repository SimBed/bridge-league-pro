<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h6><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h6>
      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :score, style: "display: block" %>
    <%= form.number_field :score, {value: 1, min: 0, step: 0.1} %>
  </div>

  <div class="field">
    <%= form.label :winner_id, style: "display: block" %>
    <%= form.select :winner_id, @player_options %>
  </div>

  <div class="field">
    <%= form.label :loser_id, style: "display: block" %>
    <%= form.select :loser_id, @player_options %>
  </div>

  <div class="field">
    <%= form.label :league_id, style: "display: block" %>
    <%= form.select :league_id, @league_options %>
  </div>

  <div class="field">
    <%= form.submit %>
  </div>
<% end %>
