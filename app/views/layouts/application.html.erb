<!DOCTYPE html>
<html>
  <head>
    <title>MonopolyDeal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://kit.fontawesome.com/52a30c356b.js" crossorigin="anonymous"></script>

    <meta charset="utf-8">
    <meta property="og:title" content= "Monopoly Deal League">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://monodeal.fly.dev">
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main class= 'container'>
      <div id="flash_messages">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      </div>
      <div class="mt-3">
        <%= yield %>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </main>
  </body>
</html>
